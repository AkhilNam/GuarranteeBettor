# Copy this file to .env and fill in real values.
# Never commit .env to version control.

# --- Kalshi ---
KALSHI_API_KEY_ID=your-api-key-id-here
KALSHI_PRIVATE_KEY_PATH=/path/to/kalshi_private_key.pem
KALSHI_DEMO=true   # Set to false for live trading

# Optional: override default URLs
# KALSHI_BASE_URL=https://api.elections.kalshi.com/trade-api/v2
# KALSHI_WS_URL=wss://api.elections.kalshi.com/trade-api/ws/v2

# --- SportsData.io ---
SPORTSDATA_API_KEY_NCAA=your-ncaa-basketball-key
SPORTSDATA_API_KEY_SOCCER=your-soccer-key

# Optional: override base URLs
# SPORTSDATA_BASE_URL_NCAA=https://api.sportsdata.io/v3/cbb/scores/json
# SPORTSDATA_BASE_URL_SOCCER=https://api.sportsdata.io/v3/soccer/scores/json

# --- OpticOdds (leave empty until migration) ---
OPTIC_ODDS_API_KEY=

# --- Strategy tuning ---
MIN_EDGE_CENTS=3
MAX_PRICE_SLIPPAGE_CENTS=2
DEFAULT_QUANTITY=10
MAX_QUANTITY=50
SPORTS_POLL_INTERVAL_S=0.75

# --- Risk limits ---
MAX_DAILY_LOSS_CENTS=10000       # $100 daily loss limit
MAX_OPEN_EXPOSURE_CENTS=50000    # $500 max open exposure
MAX_TRADES_PER_GAME=5
KEEPALIVE_INTERVAL_S=30
